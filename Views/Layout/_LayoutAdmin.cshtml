<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.5 -->
    <link rel="stylesheet" href="~/CSS/CssAdmin2/bootstrap/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/CSS/CssAdmin2/dist/css/AdminLTE.min.css">
    <!-- AdminLTE Skins. Choose a skin from the css/skins
         folder instead of downloading all of them to reduce the load. -->
    <link rel="stylesheet" href="~/CSS/CssAdmin2/dist/css/skins/_all-skins.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="~/CSS/CssAdmin2/plugins/iCheck/flat/blue.css">
    <!-- Morris chart -->
    <link rel="stylesheet" href="~/CSS/CssAdmin2/plugins/morris/morris.css">
    <!-- jvectormap -->
    <link rel="stylesheet" href="~/CSS/CssAdmin2/plugins/jvectormap/jquery-jvectormap-1.2.2.css">
    <!-- Date Picker -->
    <link rel="stylesheet" href="~/CSS/CssAdmin2/plugins/datepicker/datepicker3.css">
    <!-- Daterange picker -->
    <link rel="stylesheet" href="~/CSS/CssAdmin2/plugins/daterangepicker/daterangepicker-bs3.css">
    <!-- bootstrap wysihtml5 - text editor -->
    <link rel="stylesheet" href="~/CSS/CssAdmin2/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <script src="~/tinymce/js/tinymce/tinymce.min.js"></script>
    <script>tinymce.init({ selector: 'textarea' });</script>
</head>
<body  class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">

        <header class="main-header">
            <!-- Logo -->
            <a href="/QuanTri/Index" class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini"><b>L</b>H</span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg"><b>TOUR</b>LH</span>
            </a>
            <!-- Header Navbar: style can be found in header.less -->
        </header>
        <!-- Left side column. contains the logo and sidebar -->
        <!-- sidebar: style can be found in sidebar.less -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel -->
                <div class="user-panel">
                    <div class="pull-left info">
                        <p>HELLO ADMIN</p>
                        <a href="#"><i class="fa fa-circle text-success"></i>ĐANG RÃNH LẮM</a>
                    </div>
                </div>
                <!-- search form -->
                <!-- /.search form -->
                <!-- sidebar menu: : style can be found in sidebar.less -->
                <ul class="sidebar-menu">
                    <li class="header">THANH ĐIỀU KHIỂN</li>
                    <li class="active treeview">
                        <a href="#">
                            <i class="fa fa-dashboard"></i> <span>QUẢN LÝ ITEM</span> <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li ><i class="fa fa-circle-o"></i>@Html.ActionLink("TOUR DU LỊCH", "DuLich", "QuanTri")</li>
                            <li ><i class="fa fa-circle-o"></i> @Html.ActionLink("QUẢN LÝ XE", "ThueXe", "QuanTri") </li>
                            <li ><i class="fa fa-circle-o"></i> @Html.ActionLink("KHÁCH SẠN", "KhachSan", "QuanTri") </li>
                        </ul>
                    </li>
                    <li class="active treeview">
                        <a href="#">
                            <i class="fa fa-dashboard"></i> <span>QUẢN LÝ VÉ</span> <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li ><i class="fa fa-circle-o"></i>@Html.ActionLink("VÉ TOUR", "VeTour", "QuanTri")</li>
                            <li><i class="fa fa-circle-o"></i> @Html.ActionLink("ĐƠN ĐẶT PHÒNG", "DonDatPhong", "QuanTri") </li>
                            <li><i class="fa fa-circle-o"></i> @Html.ActionLink("VÉ XE", "VeXe", "QuanTri") </li>
                        </ul>
                    </li>
                </ul>
            </section>
            <!-- /.sidebar -->
    </div><!-- ./wrapper -->
    <!-- jQuery 2.1.4 -->
    <script src="~/CSS/CssAdmin2/plugins/jQuery/jQuery-2.1.4.min.js"></script>
    <!-- jQuery UI 1.11.4 -->
    <script src="https://code.jquery.com/ui/1.11.4/jquery-ui.min.js"></script>
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <script>
      $.widget.bridge('uibutton', $.ui.button);
    </script>
    <!-- Bootstrap 3.3.5 -->
    <script src="~/CSS/CssAdmin2/bootstrap/js/bootstrap.min.js"></script>
    <!-- Morris.js charts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>
    <script src="~/CSS/CssAdmin2/plugins/morris/morris.min.js"></script>
    <!-- Sparkline -->
    <script src="~/CSS/CssAdmin2/plugins/sparkline/jquery.sparkline.min.js"></script>
    <!-- jvectormap -->
    <script src="~/CSS/CssAdmin2/plugins/jvectormap/jquery-jvectormap-1.2.2.min.js"></script>
    <script src="~/CSS/CssAdmin2/plugins/jvectormap/jquery-jvectormap-world-mill-en.js"></script>
    <!-- jQuery Knob Chart -->
    <script src="~/CSS/CssAdmin2/plugins/knob/jquery.knob.js"></script>
    <!-- daterangepicker -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.10.2/moment.min.js"></script>
    <script src="~/CSS/CssAdmin2/plugins/daterangepicker/daterangepicker.js"></script>
    <!-- datepicker -->
    <script src="~/CSS/CssAdmin2/plugins/datepicker/bootstrap-datepicker.js"></script>
    <!-- Bootstrap WYSIHTML5 -->
    <script src="plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js"></script>
    <!-- Slimscroll -->
    <script src="~/CSS/CssAdmin2/plugins/slimScroll/jquery.slimscroll.min.js"></script>
    <!-- FastClick -->
    <script src="plugins/fastclick/fastclick.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/CSS/CssAdmin2/dist/js/app.min.js"></script>
    <!-- AdminLTE dashboard demo (This is only for demo purposes) -->
    <script src="~/CSS/CssAdmin2/dist/js/pages/dashboard.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/CSS/CssAdmin2/dist/js/demo.js"></script>


    <div class="content-wrapper">

        @RenderBody()

    </div>

</body>
</html>
